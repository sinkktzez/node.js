<%- include ('partials/header.ejs')%>

    <h1>Conheça nossos produtos!</h1>
    <!-- TAGS EJS CHAMANDO A VARIÀVEL QUE VEIO DO index.js -->
     <!-- concatenar variáel usar o sinal = -->
    <%= produto %>

    <!-- Condição para verificar se o produto não foi passado -->
     <!-- sem concatenar variavel coda-se em js normalmente:  -->
     <% if (!produto){ %>
        <!-- HTML VAI FICAR DENTRO DO COONDICIONAL< ENTÂO RETIRA-SE OS <%%> -->
         <p><%= listaProdutos %></p>
     <%}%>

     <!-- forEach para percorrer a lista de produtos -->
      <% if(!produto) {%>
      <% listaProdutos.forEach((produto) => { %>
        <p><a href="/produtos/<%= produto %>"><%= produto %></a></p>
      <% }) %>
      <% } %>

