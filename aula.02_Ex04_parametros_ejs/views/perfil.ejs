<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil</title>
</head>
<body>

    <h1>Perfil</h1>
    
    <% if (nome) { %>
        <p>Bem-vindo, <%= nome %>!</p>
    <% } else { %>
        <p>Nenhum nome foi passado.</p>
        <h2>Lista de Nomes:</h2>
        <ul>
            <% listaNomes.forEach((nome) => { %>
                <li><a href="/perfil/<%= nome %>"><%= nome %></a></li>
            <% }) %>
        </ul>
    <% } %>
    
</body>
</html>